@model Fiap06.Web.MVC.Models.Jogador

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Jogador</h2>

@Ajudante.Mensagem(TempData["msg"])

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(j => j.Nome)
        @Html.TextBoxFor(j => j.Nome, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(j => j.DataNascimento)
        @Html.TextBoxFor(j => j.DataNascimento, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(j => j.Time)
        @Html.DropDownListFor(j => j.TimeId, ViewBag.times as SelectList,
            "Selecione",
            new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(j => j.Posicao)
        @Html.EnumDropDownListFor(j => j.Posicao, "Selecione", new { @class = "form-control"})
    </div>
    @Ajudante.Botao("Cadastrar")
}

